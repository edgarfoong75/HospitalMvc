@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .home-container {
        background-color: #f0f8ff;
        min-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px;
        text-align: center;
    }

    .home-title {
        font-size: 3rem;
        font-weight: bold;
        color: #2a5d84;
        margin-bottom: 20px;
    }

    .home-description {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 40px;
    }

    .home-buttons .btn {
        margin: 0 10px;
        padding: 12px 30px;
        font-size: 1rem;
    }
</style>

<div class="home-container">
    <h1 class="home-title">Welcome to Hospital Appointment System</h1>
    <p class="home-description">
        A simple and efficient system for patients, doctors, and administrators to manage hospital activities.
    </p>

    <div class="home-buttons">
        <a asp-controller="Home" asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-controller="Home" asp-action="Register" class="btn btn-outline-secondary">Register</a>
    </div>
</div>
